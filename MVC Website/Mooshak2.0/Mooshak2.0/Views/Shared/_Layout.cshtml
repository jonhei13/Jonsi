<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/custom/Custom.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top grad navSize">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle logo" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mooshak 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logoSize" })
            </div>
            <div class="navbar-collapse collapse loginButtons">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content"> 
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mooshak 2.0</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/custom/Custom.js")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @RenderSection("scripts", required: false)
</body>
</html>
