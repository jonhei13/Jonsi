@model Mooshak2._0.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "LinkUsertoCourses";
}

@Html.Partial("AdminMain")

<div class="col-sm-8 col-md-10 middle">
    <div class="container">
        <h2>Link @Model.UserName to courses</h2>
        <br />
        @*@using (Html.BeginForm("LinkUserToCourses", "Admin", FormMethod.Get))
        {
            <label for="SearchString">Search</label>
            @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        }*@
        
        @using (Html.BeginForm("LinkUserToCourses", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Link to Course</th>
                    </tr>
                </thead>
                @for (var i = 0; i < Model.Courses.Count(); i++)
                {
                    <tbody>
                        <tr>
                            <td>@Model.Courses[i].Name</td>
                            <td>
                                @Html.HiddenFor(m => m.Courses[i].Name)
                                @Html.HiddenFor(m => m.Courses[i].ID)
                                @Html.HiddenFor(m => m.UserName)
                                <label>
                                    @Html.CheckBoxFor(m => m.Courses[i].IsSelected)
                                </label>
                            </td>

                    </tbody>
                }
            </table>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>



